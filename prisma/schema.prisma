generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id        String   @id @default(cuid())
  name      String
  icon      String
  createdAt DateTime @default(now())
  events    Event[]
}

model Organizer {
  id          String  @id @default(cuid())
  name        String
  contact     String
  description String?
  events      Event[]
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String
  date        DateTime
  location    String
  imageUrl    String?
  isFeatured  Boolean  @default(false)

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  organizerId String
  organizer   Organizer @relation(fields: [organizerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([categoryId])
  @@index([date])
}
